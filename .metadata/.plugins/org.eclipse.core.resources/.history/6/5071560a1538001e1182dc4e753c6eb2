package the.best.fixedassetprovider.controllers;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import the.best.fixedassetprovider.assets.Fixed;
import the.best.fixedassetprovider.templates.FixedRequest;

@RestController
@RequestMapping("/")
public class FixedController {
	
	@GetMapping
	public FixedRequest getFixedAsset(
			@RequestParam long principle, 
			@RequestParam double interest,
			@RequestParam int length,
			@RequestParam int compoundFrequency
					) {
		return new Fixed(principle, interest, length, compoundFrequency);
	}

}
