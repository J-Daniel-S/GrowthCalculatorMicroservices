package the.best.fixedassetprovider.controllers;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import the.best.fixedassetprovider.assets.Fixed;
import the.best.fixedassetprovider.templates.FixedRequest;

@RestController
public class FixedController {
	
	@GetMapping
	public FixedRequest getFixedAsset(
			@RequestParam("/principle") Long principle, 
			@RequestParam("/interestRate") Double interest,
			@RequestParam("/length") Integer length,
			@RequestParam("/compoundFrequency") Integer compoundFrequency
					) {
		return new Fixed(principle, interest, length, compoundFrequency);
	}

}
