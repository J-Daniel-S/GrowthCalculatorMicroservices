package the.best.fixedassetprovider.controllers;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RestController;

import the.best.fixedassetprovider.assets.Fixed;
import the.best.fixedassetprovider.templates.FixedRequest;

@RestController
public class FixedController {
	
	@GetMapping("/principle?{principle}/interest?{interest}/length?{length}/compound?{compound}")
	public FixedRequest getFixedAsset(
			@PathVariable long principle, 
			@PathVariable double interest,
			@PathVariable int length,
			@PathVariable int compound
					) {
		return new Fixed(principle, interest, length, compound);
	}

}
